<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"

    tools:context=".WuyeFragment">

    <!-- 配置container和pager的clipChildren=false， 并且指定marginLeft 和 marginRight 的值-->
    <LinearLayout
        android:id="@+id/wuye_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:clipChildren="false"
        android:orientation="horizontal">

        <android.support.v4.view.ViewPager
            android:id="@+id/scroviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

        </android.support.v4.view.ViewPager>
    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wuye_container"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:background="#000000"
        android:shrinkColumns="0,1,2">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="#000000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="#eeeeee"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/wuye_advice_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/community_ic_complaint"
                    android:contentDescription="@string/d" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wuye_advice_icon"
                    android:layout_gravity="center"
                    android:text="投诉建议" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="#eeeeee"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/wuye_wxby_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/community_ic_repair"
                    android:contentDescription="@string/d" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wuye_wxby_icon"
                    android:layout_gravity="center"
                    android:text="维修保养" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="#eeeeee"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/wuye_dz_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    android:background="@mipmap/community_ic_good"
                    android:contentDescription="@string/d" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wuye_dz_icon"
                    android:layout_gravity="center"
                    android:text="点赞表扬" />
            </RelativeLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="#000000">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="#eeeeee"
                android:gravity="center">

                <ImageButton

                    android:id="@+id/wuye_lsz_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/community_ic_account"
                    android:contentDescription="@string/d" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wuye_lsz_icon"

                    android:text="流水账" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#eeeeee"
                android:gravity="center">

                <ImageButton

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    android:background="#eeeeee"
                    android:contentDescription="@string/d" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#eeeeee"
                android:gravity="center">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    android:background="#eeeeee"
                    android:contentDescription="@string/d" />
            </RelativeLayout>


        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#eeeeee">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:background="#eeeeee"
                    android:contentDescription="@string/d" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    android:background="#eeeeee"
                    android:contentDescription="@string/d" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"

                    android:background="#eeeeee"
                    android:contentDescription="@string/d" />
            </RelativeLayout>


        </TableRow>
    </TableLayout>
</RelativeLayout>
